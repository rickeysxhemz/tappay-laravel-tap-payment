{
    "name": "tappay/laravel-tap-payment",
    "description": "A modern, fluent Laravel SDK for the Tap Payments v2 API.",
    "type": "library",
    "keywords": [
        "laravel",
        "tap",
        "tap-payments",
        "payments",
        "payment-gateway",
        "sdk",
        "gateway",
        "billing",
        "checkout",
        "mada",
        "knet",
        "stcpay",
        "middle-east",
        "gcc"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Waqas Majeed",
            "email": "dev@waqasmajeed.dev"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.10",
        "illuminate/contracts": "^11.0 || ^12.0",
        "illuminate/database": "^11.0 || ^12.0",
        "illuminate/http": "^11.0 || ^12.0",
        "illuminate/routing": "^11.0 || ^12.0",
        "illuminate/support": "^11.0 || ^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.0",
        "laravel/pint": "^1.26",
        "mockery/mockery": "^1.6",
        "orchestra/testbench": "^9.0 || ^10.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload": {
        "psr-4": {
            "TapPay\\Tap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TapPay\\Tap\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "TapPay\\Tap\\TapServiceProvider"
            ],
            "aliases": {
                "Tap": "TapPay\\Tap\\Facades\\Tap"
            }
        }
    },
    "scripts": {
        "test": "pest",
        "test:unit": "pest --group=unit",
        "test:feature": "pest --group=feature",
        "test:integration": "pest --group=integration",
        "test:coverage": "pest --coverage --min=80",
        "test:parallel": "pest --parallel",
        "analyse": "phpstan analyse --memory-limit=2G",
        "format": "php-cs-fixer fix",
        "format:check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
