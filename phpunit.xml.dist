<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/11.0/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         failOnWarning="true"
         failOnRisky="true"
         beStrictAboutOutputDuringTests="true"
         cacheDirectory=".phpunit.cache">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">src</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="base64:2fl+Ktvkujq+96eKvJt7Q3+r8KoMmJDxHYm3w19iqQE="/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_DRIVER" value="sync"/>
        <env name="DB_CONNECTION" value="testing"/>

        <!-- Tap Payments Test Configuration -->
        <!-- Copy this file to phpunit.xml and add your test API keys -->
        <env name="TAP_SECRET_KEY" value="sk_test_YOUR_SECRET_KEY_HERE"/>
        <env name="TAP_PUBLISHABLE_KEY" value="pk_test_YOUR_PUBLISHABLE_KEY_HERE"/>
        <env name="TAP_CURRENCY" value="SAR"/>
        <env name="TAP_WEBHOOK_SECRET" value="test_webhook_secret"/>

        <!-- Set to 'true' to enable real API testing (slower but more reliable) -->
        <env name="TAP_REAL_API_TESTING" value="false"/>
    </php>
    <coverage>
        <report>
            <html outputDirectory="coverage"/>
            <text outputFile="php://stdout" showUncoveredFiles="false"/>
        </report>
    </coverage>
</phpunit>